# Production Environment Variables - AWS Deployment

# Server Configuration
PORT=3000
NODE_ENV=production
HOST=0.0.0.0

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# S3 Buckets
S3_TESTPAPERS_BUCKET=exam-ai-testpapers
S3_ANSWERS_BUCKET=exam-ai-answers
S3_UPLOADS_BUCKET=exam-ai-uploads
S3_REPORTS_BUCKET=exam-ai-reports

# Use S3 instead of local filesystem
USE_S3_STORAGE=true

# Local directories (fallback or development)
UPLOAD_DIR=./uploads
OUTPUT_DIR=./output
CACHE_DIR=./cache
TEMP_DIR=./temp

# Firebase Configuration (keep existing or migrate to RDS)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key-here\n-----END PRIVATE KEY-----\n"

# Database (if migrating from Firestore to RDS)
# DATABASE_URL=postgresql://username:password@your-rds-endpoint:5432/examai
# DATABASE_SSL=true

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here

# CORS Configuration
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com
# For development, add your local IP
# CORS_ORIGIN=https://your-domain.com,http://192.168.1.100:8081

# Security
JWT_SECRET=your_long_random_secret_key_here
SESSION_SECRET=your_session_secret_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=104857600
MAX_FILES=10

# Cache Settings
CACHE_TTL=3600
ENABLE_CACHE=true

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/server.log

# Python Path (for answer generation)
PYTHON_PATH=/usr/bin/python3.11

# Answer Generation
ANSWER_GENERATION_TIMEOUT=300000
MAX_CONCURRENT_GENERATIONS=3

# CloudWatch (optional)
# CLOUDWATCH_LOG_GROUP=/aws/examai/server
# CLOUDWATCH_LOG_STREAM=production

# Monitoring
ENABLE_MONITORING=true
HEALTH_CHECK_INTERVAL=30000

# Feature Flags
ENABLE_ANSWER_GENERATION=true
ENABLE_REPORTS=true
ENABLE_TESTSERIES=true

# URLs
API_BASE_URL=https://api.your-domain.com
WEB_BASE_URL=https://your-domain.com

# Redis (if using ElastiCache)
# REDIS_HOST=your-redis-endpoint.cache.amazonaws.com
# REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password

# Email (if using SES)
# AWS_SES_REGION=us-east-1
# EMAIL_FROM=noreply@your-domain.com
# ADMIN_EMAIL=admin@your-domain.com
